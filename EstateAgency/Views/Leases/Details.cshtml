@model EstateAgency.Models.Lease

@{
    ViewData["Title"] = "Details";
}

<h2>Сведения</h2>

<div>
    <h4>Договоры аренды</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>
            Дата заключения
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SignDate)
        </dd>
        <dt>
            Дата окончания
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt>
            Ставка аренды
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalRentPrice)
        </dd>
        <dt>
            Арендуемая площадь
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Area)
        </dd>

        <dt>
            Объекты недвижимости
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Инвентарный номер</th>
                    <th>Тип</th>
                    <th>Общая площадь</th>
                </tr>
                @foreach (var item in Model.RentEstate_Leases)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estate.InventoryNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estate.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estate.Area)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
